<Window x:Class="Library.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="" Height="450" Width="400">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Grid Width="200"  Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="19*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>
            <Label Content="Имя"  FontSize="10" FontWeight="Bold"  Grid.Row="0" Grid.Column="0" Width="58" />
            <Label Content="Фамилия"  FontSize="10" FontWeight="Bold"  Grid.Row="1" Grid.Column="0" Width="58" />
            <Label Content="Почта"  FontSize="10" FontWeight="Bold"  Grid.Row="2" Grid.Column="0" Width="58" />
            <Label Content="Пароль"  FontSize="10" FontWeight="Bold"  Grid.Row="3" Grid.Column="0" Width="58" />
            <Button x:Name="login"  Content="Вход" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Width="110" Background="#FFA000FF" Foreground="White" Click="login_Click" />
            <Button x:Name="register"  Content="Регистрация" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Width="110" Background="#FFA000FF" Foreground="White" Click="register_Click" />
            <TextBox x:Name="fname" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" Width="110" VerticalAlignment="Center"/>
            <TextBox x:Name="lname" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" TextWrapping="Wrap" Width="110" VerticalAlignment="Center"/>
            <TextBox x:Name="email" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" TextWrapping="Wrap" Width="110" VerticalAlignment="Center"/>
            <TextBox x:Name="password" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" TextWrapping="Wrap" Width="110" VerticalAlignment="Center" />
            <PasswordBox x:Name="passwordBox" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" Width="110" VerticalAlignment="Center"/>
            <CheckBox x:Name="showPasswordCheckBox" Width="30" Height="30" Grid.Row="4" HorizontalAlignment="Center"  Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked" Margin="0,7,0,30" Grid.RowSpan="2"/>
        </Grid>
    </Grid>
</Window>
